<% provide( :title, 'Sign Up') %>
 <div class="row vertical-offset-100">
    	<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Please sign in</h3>
			 	</div>
			  	<div class="panel-body">
			    	<form id="signin_form" accept-charset="UTF-8" role="form">
                    <fieldset>
                    	<div class="form-group" id="errors2"></div>
			    	  	<div class="form-group">
			    		    <input id="email" class="form-control" placeholder="E-mail" name="email" type="text">
			    		</div>
			    		<div class="form-group">
			    			<input id="password" class="form-control" placeholder="Password" name="password" type="password" value="">
			    		</div>
			    		<div class="checkbox">
			    	    	<label>
			    	    		<input name="remember" type="checkbox" value="Remember Me"> Remember Me
			    	    	</label>
			    	    </div>
			    		<input id="submit" class="btn btn-lg btn-primary btn-block" type="submit" value="Login">
			    		<div class="panel-footer text-center">
						                   
						                    <a href="#facebook"><span class="fa fa-facebook fa-2x" style="#333333"></span></a>
						                    <a href="#twitter"><span class="fa fa-twitter fa-2x"></span></a>
						                   </a>
						</div>
			    	</fieldset>
			      	</form>
			    </div>
			</div>
		</div>
	</div>
<script>
$(document).ready(function()
{
Parse.initialize("qPOsLuiYC9vZAPcz8yYYPdwY5jjnlO05w7mOusu4", "dwKdYKeoPC3cInAmapc2uUiorsuUfzg8kvXmYKLM");
		$("#submit").click(function(e){


		$("#signin_form").validate({
                    onkeyup: false,
                    onfocusout: false,
                    errorElement: "div",
                    errorPlacement: function(error, element) {
                        error.appendTo("div#errors2");
                    }, 
                    rules: {
                        "email" : {
                            required : true
                            
                        },
                         "password" : {
                            required : true 
                        }
                    },
                    messages: {

						"email" : {
                            required : "A valid email address is required."
                            
                        },
                         "password" : {
                            required : "Please enter a password." 

                        } 
                    },
                    submitHandler: function(){
  							$.fancybox({helpers : {
					        overlay : {
					            css : {
					                'background' : 'rgba(58, 42, 45, 0.95)'
					            }
					        }
					    },
					    closeBtn: false,
					 	content:'<div><div class="panel-heading"><h3 class="panel-title">Scenes Near Me</h3></div><div class="panel-body">Signing in '+$("#email").val()+'</div></div>'});

                   Parse.User.logIn($("#email").val(), $("#password").val(), {
					  success: function(user) {
					  // 	 $.fancybox({helpers : {
					  //       overlay : {
					  //           css : {
					  //               'background' : 'rgba(58, 42, 45, 0.95)'
					  //           }
					  //       }
					  //   },
					  //   closeBtn: true,
					 	// content:'<div><div class="panel-heading"><h3 class="panel-title">Scenes Near Me</h3></div><div class="panel-body">User '+user.get("first_name")+' '+user.get('last_name')+ ' sucessfully signed in' +'</div></div>'});
					  	 $(location).attr('href','/user_home');
					  },
					  error: function(user, error) {
					  	 $.fancybox({helpers : {
					        overlay : {
					            css : {
					                'background' : 'rgba(58, 42, 45, 0.95)'
					            }
					        }
					    },
					    closeBtn: true,
					 	content:'<div><div class="panel-heading"><h3 class="panel-title">Scenes Near Me</h3></div><div class="panel-body">User '+error.code+' '+error.message+ ' sucessfully signed in' +'</div></div>'});
					  }
					}); 
						e.preventDefault();
                    }
                });
                 
       });

                
 }); 
</script>
